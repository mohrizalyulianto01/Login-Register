<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen32</item>
        <item name="android:layout_marginStart">@dimen/dimen32</item>
        <item name="android:layout_marginEnd">@dimen/dimen32</item>
        <item name="android:layout_marginBottom">@dimen/dimen32</item>
    </style>

    <style name="Text2">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dimen32</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button_sigin">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:backgroundTint">@color/blue_teal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen32</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="Button_google">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="icon">@drawable/logo_google</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">24dp</item>
        <item name="iconTintMode">multiply</item>
    </style>

    <style name="TextInputEdit" parent="Widget.MaterialComponents.TextInputLayout.FilledBox" >
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">@drawable/bg_text_input</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

</resources>